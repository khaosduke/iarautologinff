{

  "manifest_version": 2,
  "name": "IaR Auto Login",
  "version": "1.0",

  "description": "Automatically logs you into IamResponding.",

  "icons": {
    "48": "icons/fire-station.svg"
  },

  "content_scripts": [
    {
      "matches": ["*://*.iamresponding.com/*"],
      "js": ["iar.js"]
    }
  ],

  "browser_action": {
   "default_icon": "icons/fire-station.svg",
   "default_title": "IaR Auto Login",
   "default_popup": "popup/options.html"
 }

}
