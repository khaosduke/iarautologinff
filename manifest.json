{

  "manifest_version": 2,
  "name": "IaR Auto Login",
  "version": "1.0",

  "description": "Automatically logs you into IamResponding.",

  "icons": {
    "48": "icons/fire-station.svg"
  },

  "content_scripts": [
    {
      "matches": ["*://*.iamresponding.com/*"],
      "js": ["iar.js"]
    }
  ],

  "permissions": ["storage"],

  "options_ui": {
    "page": "options/options.html"
  },

 "applications": {
    "gecko": {
      "id": "addon@example.com"
    }
  }

}
